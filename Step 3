import random
word_list = ["aardvark", "baboon", "camel"]


chosen_word = random.choice(word_list)
print(chosen_word)

# TODO-1: Create a "placeholder" with the same number of blanks as the chosen_word
placeholder =  "".join(["_"] * len(chosen_word))
print(placeholder)
guess = input("Guess a letter: ").lower()

# TODO-2: Create a "display" that puts the guess letter in the right positions and _ in the rest of the string.
display = ""
correct_guess = chosen_word
while display != correct_guess:
    guess = input("Guess a letter: ").lower()
    for letter in chosen_word:
        if letter == guess:
            display += letter
            if display == correct_guess:
                print("You win")
        else:
            display += "_"
    print(display)


# Code to study
import random

word_list = ["aardvark", "baboon", "camel"]
chosen_word = random.choice(word_list)
print(chosen_word)  # Just for testing; remove this in final game

# Create a "display" list with blanks for each letter
display = ["_"] * len(chosen_word)
print(" ".join(display))

# Loop until the word is guessed
while "_" in display:
    guess = input("Guess a letter: ").lower()

    # Loop through each letter in the chosen word
    for index, letter in enumerate(chosen_word):
        if letter == guess:
            display[index] = guess  # Replace blank with guessed letter

    print(" ".join(display))  # Show current state of the word

print("You win!")

print(display)



